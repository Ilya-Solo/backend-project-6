extends ../layouts/application.pug

block header
  = t('views.tasks.new.title')

block content
  +formFor()(action=route('tasks') method='post')
      +input(task, 'name', errors)(type="text")
      +textarea(task, 'description', errors)
      +select(statuses, 'statusId', ['name'], _.get(task, 'statusId'), errors)
      +select(users, 'executorId', ['firstName', 'lastName'], _.get(task, 'executorId'), errors)
      +select(labels, 'labels', ['name'], _.get(task, 'labelIds'), errors)(multiple="multiple")
      +submit(task)(value=t('views.tasks.new.submit'))